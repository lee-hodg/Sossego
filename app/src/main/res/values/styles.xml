<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cardTitleTextColor</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
    </style>
    <style name="TextAppearance.Subtitle" parent="TextAppearance.Title" >
        <item name="fontFamily">@font/roboto_italic</item>
        <item name="android:layout_marginTop">@dimen/marginHalf</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/cardSubTitleTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ImageAppearance.ListIcon" parent="MaterialAlertDialog.MaterialComponents.Title.Icon" >
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
    </style>
    <style name="TextAppearance.HeaderBar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardBackgroundColor</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPadding">@dimen/padding</item>
        <item name="strokeColor">@color/cardBorderColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/marginHalf</item>
    </style>
</resources>